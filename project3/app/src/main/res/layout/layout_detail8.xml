<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail1">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/download_8" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Nama Danau"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/good"
                android:text="Danau Ranau" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/good"
                android:layout_marginRight="20dp"
                android:text="Luas"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/good"


                android:layout_marginRight="20dp"
                android:text="125.9 km²" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:padding="20dp"
        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                                                <ImageView
                                                android:layout_width="100dp"
                                                android:layout_height="120dp"
                                                android:layout_marginTop="20dp"
                                                android:layout_marginRight="20dp"
                                                android:src="@drawable/download_5"/>

                                                 <TextView
                                                     android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     android:textSize="16dp"
                                                     android:text="Picture 1"
                                                     android:layout_marginLeft="13dp"
                                                     />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/download_3"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:text="Picture 2"
                                android:layout_marginLeft="13dp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/download_7"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:text="Picture 3"
                                android:layout_marginLeft="13dp"

                                />
                        </LinearLayout>



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danau Lain"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="26dp"/>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="20dp"    >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mantano"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maninjau"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="20dp"
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sentani"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="20dp"
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poso"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danau Ranau adalah danau di Sumatra, Indonesia. Terletak di 4 ° 51′45 ″ S 103 ° 55′50 ″ E."
        android:layout_marginTop="370dp"
        android:layout_marginLeft="20dp"
        android:textStyle="italic"
        android:textSize="20dp"/>


</RelativeLayout>
